<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionTareas_Proyecto.Views.GestionListaView"
             xmlns:viewModel="clr-namespace:GestionTareas_Proyecto.ViewModels"
             xmlns:model="clr-namespace:GestionTareas_Proyecto.Models"
             Title="GestionView">

    <ContentPage.BindingContext>
        <viewModel:GestionListaViewModels/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="10"
                             Padding="15">
            <Label Text="To-Do List"
                   FontSize="Title"
                   FontFamily="poppins"
                   TextColor="#FF2A719D"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Text="Nombre de tarea"
                   FontFamily="poppins"
                   FontAttributes="Bold"/>
            <Entry Placeholder="Escribe el titulo de tu tarea"
                   Text="{Binding TareaSeleccionada.Nombre}"/>

            <Label Text="Descripcion de Tarea"
                   FontFamily="poppins"
                   FontAttributes="Bold"/>
            <Entry Placeholder="DescripciÃ³n"
                   Text="{Binding TareaSeleccionada.Descripcion}"/>

            <HorizontalStackLayout Spacing="20"
                                   VerticalOptions="Center">
                <Label Text="  Establezca la fecha limite"
                    FontFamily="poppins"
                            FontAttributes="Bold"
                       VerticalOptions="Center"
                       TextColor="#FF4A4AC9"/>
                <DatePicker Date="{Binding TareaSeleccionada.FechaLimite}"
                            FontFamily="poppins"
                            FontAttributes="Bold"
                            Format="dd/MMMM/yyyy"/>
            </HorizontalStackLayout>

            <Label Text="Prioridades"
                   FontFamily="poppins"
                   FontAttributes="Bold"/>

            <Label Text="1-Baja / 2-Media / 3-Alta"
                   FontFamily="poppins"
                   FontAttributes="Bold"/>

            <Entry Placeholder="Ingrese la prioridad"
                   Text="{Binding TareaSeleccionada.Descripcion}"/>

            <Button Text="Guardar Tarea" Background="#FF238D00" Command="{Binding ValidacionesCommand}" FontAttributes="Bold" FontFamily="poppins" FontSize="20"/> 

            <CollectionView ItemsSource="{Binding GestionListaCollection}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:GestionLista" >
                        <Border StrokeShape="RoundRectangle 5" StrokeThickness="1" Margin="5" Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                                <Label Text="{Binding Descripcion}" FontSize="Small" />
                                
                            </VerticalStackLayout>
                        </Border>                        
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>


    </ScrollView>

</ContentPage>